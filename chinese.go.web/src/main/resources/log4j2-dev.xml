<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- 文件输出格式 -->
	<property name="PATTERN" value="%-12(%d{MM-dd HH:mm:ss.SSS}) |-%-5level [%thread] %c [%L] -| %msg%n"/>
	<!-- pro文件路径 -->
	<property name="FILE_PATH" value="/chinaeseGo/logs/app-dev"/>

	<!-- 开发环境 -->
	<springProfile name="dev">
		<appender name="CONSOLE"
				  class="ch.qos.logback.core.ConsoleAppender">
			<encoder>
				<pattern>${PATTERN}</pattern>
			</encoder>
		</appender>
		<appender name="DEV_FILE"
			class="ch.qos.logback.core.rolling.RollingFileAppender">
			<file>${FILE_PATH}.log</file>
			<rollingPolicy
					class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
				<fileNamePattern>${FILE_PATH}.%d{yyyy-MM-dd}.log
				</fileNamePattern>
				<MaxHistory>100</MaxHistory>
			</rollingPolicy>
			<layout class="ch.qos.logback.classic.PatternLayout">
				<pattern>${PATTERN}</pattern>
			</layout>
		</appender>
		<logger name="org.springframework" level="info"/>
		<logger name="org.hibernate" level="info"/>
		<logger name="org.hibernate.hql.internal.ast" level="debug"/>
		<root level="debug">
			<appender-ref ref="CONSOLE"/>
			<appender-ref ref="DEV_FILE"/>
		</root>
	</springProfile>

</configuration>
